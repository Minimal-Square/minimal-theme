/* Font sizes */
.heading-xl { font-size: {{ settings.base_font_size | times: 3.157 }}px; font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }}; font-weight: {{ settings.font_heading.weight }}; }
.heading-lg { font-size: {{ settings.base_font_size | times: 2.369 }}px; font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }}; font-weight: {{ settings.font_heading.weight }}; }
.heading-md { font-size: {{ settings.base_font_size | times: 1.777 }}px; font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }}; font-weight: {{ settings.font_heading.weight }}; }
.heading-sm { font-size: {{ settings.base_font_size | times: 1.333 }}px; font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }}; font-weight: {{ settings.font_heading.weight }}; }
.body-md { font-size: {{ settings.base_font_size }}px; font-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }}; }
.body-sm { font-size: {{ settings.base_font_size | times: 0.75 }}px; font-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }}; }
.body-xs { font-size: {{ settings.base_font_size | times: 0.563 }}px; font-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }}; }


/* BUTTONS */
/* Button sizes */
.btn-sm {
    padding: 0.375rem 1rem;
    border-radius: 4px;
    transition: all .1s ease-in;
    font-size: {{ settings.base_font_size }}px;
    font-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    font-weight: 500;
    display: inline-block;
}

.btn-lg {
    padding: 0.75rem 1.25rem;
    border-radius: 4px;
    transition: all .1s ease-in;
    font-size: {{ settings.base_font_size }}px;
    font-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    font-weight: 500;
    display: inline-block;
}

.btn-sm:focus, .btn-lg:focus {
    outline: none;
}

/* Button colors */
.btn-primary {
    background-color: {{ settings.clr_button_primary_background }};
    color: {{ settings.clr_button_primary_text }};
}


{% assign color = settings.clr_button_primary_background | color_brightness %}

.btn-primary:hover {
    background-color: {% if color <= 150 %} {{ settings.clr_button_primary_background | color_lighten: 5 }} {% else %} {{ settings.clr_button_primary_background | color_darken: 5 }}{% endif %};
    filter: drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.1));
}

.btn-primary:active {
    background-color: {% if color <= 150 %} {{ settings.clr_button_primary_background | color_lighten: 10 }} {% else %} {{ settings.clr_button_primary_background | color_darken: 10 }}{% endif %};
}

.btn-primary:disabled, .btn-secondary:disabled {
    background: #EDEDED;
    color: #9E9E9E;
}

{% assign colorSecond = settings.clr_button_secondary_background | color_brightness %}

.btn-secondary {
    background-color: {{ settings.clr_button_secondary_background }};
    color: {{ settings.clr_button_secondary_text }};
    border: 1px solid {{ settings.clr_button_secondary_border }};
}

.btn-secondary:hover {
    filter: drop-shadow(0px 2px 4px rgba(0, 0, 0,  0.1));
}

.btn-secondary:active {
    background-color: {% if colorSecond <= 150 %} {{ settings.clr_button_secondary_background | color_lighten: 10 }} {% else %} {{ settings.clr_button_secondary_background | color_darken: 10 }}{% endif %};
}

/* INPUT */
.input {
    height: 3rem;
    width: 21.875rem;
    padding: 0.375rem 0.75rem;
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    transition: all .1s ease-in;
    filter: drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.1));
}

.input::placeholder {
    color: #757575;
}

.input:hover {
    filter: drop-shadow(0px 4px 6px rgba(0, 0, 0, 0.1));
}

.input:focus {
    outline: none;
}

.input:active {
    color: #0A0A0A;
}