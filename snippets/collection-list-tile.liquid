<div class="mt-dynamic">
    <a href="{{ collection.url }}">
        <div class="{% if template.name == index %} aspect-w-10 aspect-h-{{ section.settings.collection_list_aspect | times: 10 | round }} {% endif %} {% if template.name == 'list-collections' %} aspect-w-1 aspect-h-1 {% endif %}">
            <img class="object-cover" src="{% if block.settings.collection_list_image != blank %}{{ block.settings.collection_list_image | img_url: 'master' }}{% elsif block.settings.collection_list_image == blank %}{{ collection.image | img_url: 'master' }}{% endif %}" alt="">
        </div>
        <h3 class="mt-3 body-md clr-general-text text-center">{% if block.settings.collection_list_custom_title != blank %}{{ block.settings.collection_list_custom_title }}{% elsif block.settings.collection_list_custom_title == blank %}{{ collection.title }}{% endif %}</h3>
    </a>
</div>